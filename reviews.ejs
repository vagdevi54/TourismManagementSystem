<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reviews - Tourism Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .review-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .review-card:hover {
            transform: translateY(-5px);
        }
        .rating {
            color: #ffc107;
        }
        .user-info {
            font-size: 0.9rem;
            color: #6c757d;
        }
        .review-date {
            font-size: 0.8rem;
            color: #adb5bd;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container py-5">
        <h1 class="text-center mb-5">Customer Reviews</h1>
        
        <% if (reviews && reviews.length > 0) { %>
            <div class="row">
                <% reviews.forEach(review => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card review-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="card-title mb-0"><%= review.package_name %></h5>
                                    <div class="rating">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <i class="fas fa-star<%= i <= review.rating ? '' : '-o' %>"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <p class="card-text"><%= review.comment %></p>
                                <div class="user-info">
                                    <p class="mb-0">By <%= review.user_name %></p>
                                    <p class="review-date mb-0">Reviewed on <%= new Date(review.created_at).toLocaleDateString() %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">
                No reviews available yet. Be the first to review our packages!
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 